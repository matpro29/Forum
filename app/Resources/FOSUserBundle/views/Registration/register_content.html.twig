<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-signin">
    {{ form_row(form._token) }}

    {{ form_errors(form) }}

    <h2 class="form-signin-heading">Please register</h2>

    <div class="sr-only">{{ form_label(form.username) }}</div>
    {{ form_widget(form.username, { 'attr': { 'class': 'form-control', 'placeholder': 'Username' } }) }}
    {{ form_errors(form.username) }}

    <div class="sr-only">{{ form_label(form.email) }}</div>
    {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'placeholder': 'Email' } }) }}
    {{ form_errors(form.email) }}

    <div class="sr-only">{{ form_label(form.plainPassword.first) }}</div>
    {{ form_widget(form.plainPassword.first, { 'attr': { 'class': 'form-control', 'placeholder': 'Password' } }) }}
    {{ form_errors(form.plainPassword.first) }}

    <div class="sr-only">{{ form_label(form.plainPassword.second) }}</div>
    {{ form_widget(form.plainPassword.second, { 'attr': { 'class': 'form-control', 'placeholder': 'Repeat password' } }) }}

    <input type="submit"
           class="btn btn-lg btn-primary btn-block top-margin10px"
           id="_submit"
           name="_submit"
           value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
</form>
